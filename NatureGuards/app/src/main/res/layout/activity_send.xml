<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e2f5e4">


    <ImageView
        android:id="@+id/img_send"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:src="@drawable/ic_launcher"/>

    <EditText
        android:id="@+id/edt_txt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="location"
        android:textColor="@android:color/tertiary_text_dark"/>
    <EditText
        android:id="@+id/edt_txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="description"
        android:textColor="@android:color/tertiary_text_dark"/>
    <ImageView
        android:id="@+id/img_recieve"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <CheckBox
            android:id="@+id/cbox_gorskoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Служба по горите"/>
        <CheckBox
            android:id="@+id/cbox_grajdanska"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Гражданска Защита"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <CheckBox
            android:id="@+id/cbox_okolona_sreda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Служба Околна Среда"/>
        <CheckBox
            android:id="@+id/cbox_animals_protected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Защита на животните"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginTop="16dp"/>



</LinearLayout>
