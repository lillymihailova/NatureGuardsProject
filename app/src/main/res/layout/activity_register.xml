<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_shield" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Register to  Nature Guard"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView"
            android:text="First Name:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/fname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView2"
            android:hint="First Name"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="textCapWords"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView2"
            android:text="Last Name:"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView3"
            android:hint="Last Name"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="textCapWords"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:text="Email:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lname"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView4"
            android:text="Username:"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_alignRight="@+id/register"
            android:layout_alignEnd="@+id/register" />

        <EditText
            android:id="@+id/uname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView5"
            android:hint="Username"
            android:textColor="#000000"
            android:textSize="15dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/pword"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/uname"
            android:layout_below="@+id/textView5"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignTop="@+id/pword"
            android:text="Password:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/textView2"
            android:layout_below="@+id/textView6"
            android:background="@color/colorPrimary"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="13dp" />

        <Button
            android:id="@+id/bktologin"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pword"
            android:background="@color/colorPrimary"
            android:text="Back To Login"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/register_error"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/register"
            android:textColor="#000000" />

    </RelativeLayout>
</LinearLayout>