<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_shield" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Welcome to Nature Guard"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView"
            android:hint="E-mail"
            android:inputType="text"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/registerbtn"
            android:background="@color/colorPrimary"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="13dp" />

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_below="@+id/pword"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/login"
            android:background="@color/colorPrimary"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/loginErrorMsg"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/passres"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/email"
            android:layout_toLeftOf="@+id/textView"
            android:text="Email:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/pword"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/email"
            android:layout_below="@+id/email"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pworda"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/pword"
            android:text="Password:"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/passres"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/login"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="Forgot Password"
            android:textColor="#fff"
            android:textSize="13dp" />

        

    </RelativeLayout>
</LinearLayout>